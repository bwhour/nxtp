{
  "name": "@connext/nxtp-integration",
  "version": "0.1.25",
  "description": "Integration tests for NXTP",
  "author": "Connext",
  "license": "MIT",
  "scripts": {
    "dev": "exit 0",
    "lint": "eslint ./src --ext .ts --env node",
    "itest": "yarn tsc && node",
    "test": "nyc ts-mocha --check-leaks --exit --timeout 300000 'test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "docker:chains:up": "docker-compose -f ops/chains.docker-compose.yml up -d",
    "docker:chains:down": "docker-compose -f ops/chains.docker-compose.yml down",
    "docker:messaging:up": "docker-compose -f ops/messaging.docker-compose.yml up -d",
    "docker:messaging:down": "docker-compose -f ops/messaging.docker-compose.yml down",
    "docker:router:up": "docker-compose -f ops/router.docker-compose.yml up -d",
    "docker:router:down": "docker-compose -f ops/router.docker-compose.yml down",
    "docker:web3signer:up": "docker-compose -f ops/web3signer.docker-compose.yml up -d",
    "docker:web3signer:down": "docker-compose -f ops/web3signer.docker-compose.yml down",
    "docker:services:up": "docker-compose -f ops/chains.docker-compose.yml -f ops/messaging.docker-compose.yml -f ops/web3signer.docker-compose.yml up -d",
    "docker:services:down": "docker-compose -f ops/chains.docker-compose.yml -f ops/messaging.docker-compose.yml -f ops/web3signer.docker-compose.yml down",
    "docker:all:up": "yarn docker:services:up && sleep 30 && yarn docker:router:up",
    "docker:all:down": "docker-compose -f ops/chains.docker-compose.yml -f ops/messaging.docker-compose.yml -f ops/web3signer.docker-compose.yml -f ops/router.docker-compose.yml down",
    "concurrency:router": "ts-node ./test/load/routerConcurrency.ts",
    "cyclical:router": "ts-node ./test/load/routerCyclical.ts | tee packages/integration/logs.json",
    "concurrency:txservice": "ts-node ./test/load/txserviceConcurrency.ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "dependencies": {
    "@connext/nxtp-contracts": "workspace:*",
    "@connext/nxtp-sdk": "workspace:*",
    "@connext/nxtp-txservice": "workspace:*",
    "@connext/nxtp-utils": "workspace:*",
    "ethers": "^5.4.6",
    "evt": "^1.10.1",
    "pino": "^6.13.0",
    "ts-node": "^10.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^9.0.0",
    "@types/pino": "^6.3.11",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^7.32.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "p-queue": "6.6.2",
    "pino-pretty": "^5.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-mocha": "^8.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  }
}
